{
  "name": "@consento/api",
  "version": "0.3.2",
  "description": "JavasScript API for building things with consento.",
  "main": "index.js",
  "private": true,
  "scripts": {
    "ci": "npm run lint && npm run test -- --no-watchman",
    "test": "jest --env=node",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "pack": "pack-ts",
    "release": "npm run ci && npm run build-ts && npm run pack && cd dist && npm publish --access=public",
    "lint": "eslint --ext .js,.ts ."
  },
  "keywords": [],
  "author": "Martin Heidegger <martin.heidegger@gmail.com>",
  "license": "MIT",
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  },
  "eslintConfig": {
    "extends": "standard-with-typescript",
    "parserOptions": {
      "project": "./tsconfig.json"
    }
  },
  "eslintIgnore": [
    "node_modules/*",
    "dist/*",
    "coverage/*",
    "**/*.d.ts",
    "/src/types/"
  ],
  "dependencies": {
    "@consento/crypto": "^0.3.1"
  },
  "devDependencies": {
    "@leichtgewicht/pack-ts": "^1.0.1",
    "@types/events": "^3.0.0",
    "@types/jest": "^26.0.7",
    "@types/libsodium-wrappers-sumo": "^0.7.3",
    "@typescript-eslint/eslint-plugin": "^3.7.1",
    "abort-controller": "^3.0.0",
    "eslint": "^7.5.0",
    "eslint-config-standard-with-typescript": "^18.0.2",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "jest": "^26.1.0",
    "ts-jest": "^26.1.3",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/consento-org/api.git"
  },
  "bugs": {
    "url": "https://github.com/consento-org/api/issues"
  },
  "homepage": "https://github.com/consento-org/api#readme"
}
